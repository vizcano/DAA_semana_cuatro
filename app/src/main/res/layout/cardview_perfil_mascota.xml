<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvFotoMascota"
    android:layout_width="@dimen/width_cvFoto"
    android:layout_height="@dimen/height_cvFoto"
    app:cardCornerRadius="@dimen/esquinas">

    <ImageView
        android:id="@+id/imgFotoMascota"
        android:layout_width="@dimen/imgFotoSize"
        android:layout_height="@dimen/imgFotoSize"
        android:src="@drawable/sheep"
        />

        <LinearLayout
            android:id="@+id/llDatosFotosMascota"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_llDFM"
            android:orientation="horizontal"
            android:layout_gravity="bottom|center"
            android:gravity="center">

            <TextView
                android:id="@+id/txtRatingFoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/texto"
                android:layout_gravity="center|left"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/imgHuesoAmarilloFoto"
                android:layout_width="@dimen/layImg"
                android:layout_height="@dimen/layImg"
                android:src="@drawable/hueso_color"
                />
        </LinearLayout>

</android.support.v7.widget.CardView>